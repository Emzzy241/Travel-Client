@{
  ViewData["Title"] = $"Delete {Model.DestinationName}";
}

@model TravelClient.Models.Destination

<h4>Are you sure you want to delete @Model.DestinationName?</h4>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}

@Html.ActionLink("Back to details", "Details", new { id = @Model.DestinationId})