@{
    ViewData["Title"] = "Create a New Destination";
}


@model TravelClient.Models.Destination;

<h4>Add a New Destination</h4>

@using(Html.BeginForm())
{
   <div class="form-control">
        @Html.LabelFor(model => model.UserName)
        @Html.TextBoxFor(model => model.UserName)
        <br />
   </div>
   <br>

    <div class="form-control">
        @Html.LabelFor(model => model.Country)
        @Html.TextBoxFor(model => model.Country)
        <br />    
    </div>
    <br>

    <div class="form-control">
        @Html.LabelFor(model => model.DestinationName)
        @Html.TextBoxFor(model => model.DestinationName)
    </div>
    <br>

    <div class="form-control">
        @Html.LabelFor(model => model.Review)
        @Html.TextBoxFor(model => model.Review)
    </div>
    <br>

    <div class="form-control">
        @Html.LabelFor(model => model.OverallRating)
        @Html.TextBoxFor(model => model.OverallRating)
    </div>
    <br />
    <br />
    <input type="submit" value="Add new destination" class="btn btn-primary"/>
}

<br />
<p>@Html.ActionLink("Back to all destinations", "Index")</p>